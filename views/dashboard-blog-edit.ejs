<!-- BLOGS DATA -->
<div class="table-data">
  <div class="order">
    <div class="head_blog_new">
      <h3>Edit Blog</h3>

      <form
        id="blogForm"
        action="/dashboard/blog-edit?id=<%= blog[0]?._id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= blog[0]?.title %>"
          />
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <!-- Placeholder for WYSIWYG editor -->
          <textarea class="form-control" id="body" name="body">
<%= blog && blog[0]?.body %></textarea
          >
        </div>
        <div class="form-group">
          <div class="container-dropzone">
            <input type="file" id="file" accept="image/*" name="file" hidden />
            <div class="img-area" data-img="">
              <i class="bx bxs-cloud-upload icon"></i>
              <h3>Upload Image</h3>
              <p>Image size must be less than <span>2MB</span></p>
            </div>
            <div class="select-image">Select Image</div>
          </div>
        </div>
        <div class="email-buttons mtop-1">
          <button class="btn btn-secondary" href="dashboard/blogs?page=1">
            Back
          </button>
          <button type="submit" class="btn btn-primary email-send">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- BLOGS DATA -->

