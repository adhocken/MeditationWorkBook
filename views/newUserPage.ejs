<%- include('./partials/userHeader.ejs'); %>

<!-- Background image -->
<div class="bg-image-others"></div>

<div class="d-flex align-items-center justify-content-center mx-auto user-con">
  <div class="card shadow-lg p-0 d-flex flex-column flex-md-row" id="user-box">
    <!-- Image on the side for big screens, and on top for small screens -->
    <div class="d-block" id="side-image">
      <img
        src="../img/meditationworkbook.png"
        class="img-fluid"
        alt="Admin Logo"
        id="side-pic"
      />
    </div>

    <!-- Form Section -->
    <form action="/user/new_user" method="POST" class="p-5" id="registerForm">
      <h3 class="mb-4 text-center">Create Admin Account</h3>

      <div class="text-center" id="create-message"></div>

      <!-- Username Input -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text bg-warning"
            ><i class="fa-solid fa-user"></i
          ></span>
          <input
            type="text"
            class="form-control"
            placeholder="Enter your username"
            id="username"
            name="username"
          />
        </div>
        <p
          class="create-error validation-font text-danger"
          id="register-username"
        ></p>
      </div>

      <!-- Password Input -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text bg-warning"
            ><i class="fa-solid fa-lock"></i
          ></span>
          <input
            type="password"
            class="form-control"
            placeholder="Enter your password"
            id="password"
            name="password"
          />
        </div>
        <p
          class="create-error validation-font text-danger"
          id="register-password"
        ></p>
      </div>

      <!-- Create Account Button -->
      <div class="pt-3">
        <button type="submit" class="btn btn-warning btn-lg w-100">
          Create an Account
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('./partials/authorFooter.ejs'); %>
