<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meditation Workbook</title>
    <link rel="stylesheet" href="../css/style.css" />
    <link rel="stylesheet" href="../css/index.css" />
    <link
      rel="shortcut icon"
      href="img/meditationworkbook.png"
      type="image/x-icon"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <header>
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg fixed-top d-flex align-items-center">
        <div class="container-fluid d-flex justify-content-between">
          <!-- Brand -->
          <a href="/" class="navbar-brand"
            ><i class="fa-brands fa-pagelines"></i>Meditation Workbook</a
          >

          <!-- Toggler/collapsibe Button -->
          <button
            class="navbar-toggler collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Navbar links -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Home -->
              <li class="nav-item d-flex align-items-center">
                <a class="nav-link d-inline-block position-relative" href="/"
                  ><i class="fa-solid fa-house"></i> Home</a
                >
              </li>
              <!-- Authors -->
              <li class="nav-item d-flex align-items-center dropdown">
                <a
                  class="nav-link d-inline-block position-relative dropdown-toggle"
                  href="#"
                  id="authorsDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <i class="fa-solid fa-user"></i> Authors
                </a>
                <ul class="dropdown-menu" aria-labelledby="authorsDropdown">
                  <li>
                    <a class="dropdown-item" href="/author/julie_mandal"
                      >About Julie</a
                    >
                  </li>
                  <li>
                    <a class="dropdown-item" href="/author/gita_pattison"
                      >About Gita</a
                    >
                  </li>
                </ul>
              </li>
              <!-- Blog -->
              <li class="nav-item d-flex align-items-center">
                <a
                  class="nav-link d-inline-block position-relative"
                  href="/blogs?page=1"
                  ><i class="fa-solid fa-pen-to-square"></i> Blog</a
                >
              </li>
              <!-- Tools -->
              <li class="nav-item d-flex align-items-center dropdown">
                <a
                  class="nav-link d-inline-block position-relative dropdown-toggle"
                  href="#"
                  id="toolsDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <i class="fa-solid fa-link"></i> Connections
                </a>
                <ul class="dropdown-menu" aria-labelledby="toolsDropdown">
                  <li>
                    <a class="dropdown-item" href="/tools">Meditation Tools</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/calendar?page=1">Event Calendar</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/events"
                      >Book Author Events</a
                    >
                  </li>
                </ul>
              </li>
            </ul>
          </div>
          <% if (token !==null && token !== 'undefined' ) { %>
          <a class="btn" href="/dashboard" id="admin"
            ><i class="fa-solid fa-right-to-bracket"></i> Dashboard</a
          >
          <% } else { %>
          <a class="btn" href="/user/login" id="admin"
            ><i class="fa-solid fa-right-to-bracket"></i> Login</a
          >
          <% }%>
        </div>
      </nav>
    </header>
  </body>
</html>
